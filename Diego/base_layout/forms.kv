# archivo.kv

MDScreen:
    MDBoxLayout:
        orientation: 'vertical'
        padding: 10, 10

        # Primera fila
        MDGridLayout:
            cols: 4
            size_hint_y: 0.2
            canvas.before:
                Color:
                    # rgba: 0, 0, 1, 0.3  # Color azul semi-transparente
                Rectangle:
                    pos: self.pos
                    size: self.size

            # Title
            MDBoxLayout:
                orientation: 'vertical'
                #This is my first box, give it a color and style , size 
                size_hint_x: 0.7
                spacing: '10dp'
                padding: '10dp'
                canvas.before:
                    Color:
                        rgba: 0, 0, 1, 0.5  # Color azul semi-transparente
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MDLabel:
                    text: "Title"
                    halign: 'center'
                    font_style: 'H4'
                    theme_text_color: 'Custom'
                    text_color: 1, 1, 1, 1
                MDLabel:
                    #This text is a subtitle, give it a style
                    text: "Subtitle"
                    halign: 'center'
                    font_style: 'H6'
                    theme_text_color: 'Custom'
                    text_color: 1, 1, 1, 1

            # Result
            MDBoxLayout:
                orientation: 'vertical'
                orientation: 'vertical'
                spacing: '10dp'
                padding: '10dp'
                size_hint_x:0.3
                canvas.before:
                    Color:
                        rgba: 1, 1, 0, 0.5  # Color amarillo semi-transparente
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MDLabel:
                    text: "Calor 1"
                MDLabel:
                    text: "100"
            # Result
            MDBoxLayout:
                orientation: 'vertical'
                orientation: 'vertical'
                spacing: '10dp'
                padding: '10dp'
                size_hint_x:0.3
                canvas.before:
                    Color:
                        rgba: 0.5, 1, 0, 0.5  # Color verde claro semi-transparente
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MDLabel:
                    text: "Calor 2"
                MDLabel:
                    text: "100"
            # Result
            MDBoxLayout:
                orientation: 'vertical'
                spacing: '10dp'
                padding: '10dp'
                size_hint_x:0.3
                canvas.before:
                    Color:
                        rgba: 0.5, 0.5, 1, 0.5  # Color azul claro semi-transparente
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MDLabel:
                    text: "Card"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1
                MDLabel:
                    text: "Card2"
                    halign: "center"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1


        # Segunda fila
        MDGridLayout:
            cols: 3
            size_hint_y: 0.8
            # canvas.before:
            #     Color:
            #         rgba: 0, 1, 0, 0.5  # Color verde semi-transparente
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size

            # forms
            MDBoxLayout:
                orientation: 'vertical'
                size_hint_x: 0.6
                elevation: 10 #Shadow
                padding: ('5dp', '5dp', '5dp', '15dp')
                spacing:30
                orientation: 'vertical'
                MDLabel:
                    id:Data_input_label
                    text: "Datos de Entrada"
                    font_style: 'H4'
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]
                    padding_y: 15
                MDTextField:
                    id:user #Temperatura --> variable?
                    hint_text: "Presion de la bomba de baja presion (KPa)"
                    mode: "round"
                    size_hint_x: 0.95
                    font_style: 'caption'
                    #font size dinamic
                    font_size: self.height * 0.3
                    helper_text: "Massage"
                    helper_text_mode: "persistent"
                    icon_right: "thermometer-low"
                    icon_right_color_focus: "orange"
                
                MDTextField:
                    id:password #presion --> variable?
                    size_hint_x: 0.95
                    hint_text: "Presion de la bomba de alta presion (KPa)"
                    mode: "round"
                    max_text_length: 15
                    helper_text: "Massage"
                    icon_right: "eye-off"
                    icon_right_color_focus: "orange"
                MDTextField:
                    id:password #presion --> variable?
                    size_hint_x: 0.95
                    hint_text: "Presión de la caldera"
                    mode: "round"
                    max_text_length: 15
                    helper_text: "Massage"
                    icon_right: "eye-off"
                    icon_right_color_focus: "orange"
                MDTextField:
                    id:password #presion --> variable?
                    size_hint_x: 0.95
                    hint_text: "Tempratura de la caldera (°C)"
                    mode: "round"
                    max_text_length: 15
                    helper_text: "Massage"
                    icon_right: "eye-off"
                    icon_right_color_focus: "orange"
                MDTextField:
                    id:password #presion --> variable?
                    size_hint_x: 0.95
                    hint_text: "Eficiancia turbina (isentropica)"
                    mode: "round"
                    max_text_length: 15
                    helper_text: "Massage"
                    icon_right: "percent-outline"
                    icon_right_color_focus: "orange"
                MDTextField:
                    id:password #presion --> variable?
                    size_hint_x: 0.95
                    hint_text: "Eficiencia bomba (isentropicas)"
                    mode: "round"
                    max_text_length: 15
                    helper_text: "Massage"
                    icon_right: "percent-outline"
                    icon_right_color_focus: "orange"
                BoxLayout:
                    orientation: 'horizontal'
                    spacing: 10  # Espacio entre los botones

                    MDRoundFlatButton:
                        text: "Calcular"
                        font_size: 20
                        size_hint_x: 0.4
                        #on_press: app.login()

                    MDRoundFlatButton:
                        text: "Clear"
                        font_size: 20
                        size_hint_x: 0.4
                        #on_press: app.clear()


            # Draw
            MDBoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0.5, 0, 1, 0.5  # Color morado claro semi-transparente
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MDLabel:
                    text: "Titulo"
                MDLabel:
                    text: "Titulo"
                MDLabel:
                    text: "Titulo"

            # Results
            MDBoxLayout:
                orientation: 'vertical'
                canvas.before:
                    Color:
                        rgba: 0.5, 0, 0.5, 0.5  # Color morado claro semi-transparente
                    Rectangle:
                        pos: self.pos
                        size: self.size
                MDLabel:
                    text: "Titulo"
                MDLabel:
                    text: "Titulo"
                MDLabel:
                    text: "Titulo"

