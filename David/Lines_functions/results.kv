<MyResults>:
    orientation: 'vertical'
    # Añadido para resultados
# Caja de resultados
    Label:
        text: 'Resultados'
        background_color: 182/255,66/255,245/255,1
        font_size: 30
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        bold: True
        italic: True
    GridLayout:
        cols: 2
        size_hint: (1, .4)
        # Eficacia térmica
        Label:
            text: 'Eficacia térmica del ciclo (%)'
            color: (0, 0, 0, 1)
            font_size: 20

        Label:
            id: eficiencia_termica
            text: 'Respuesta 1'
            color: (0, 0, 0, 1)
            font_size: 20

        # Trabajo neto
        Label:
            text: 'Trabajo neto del ciclo (kW)'
            color: (0, 0, 0, 1)
            font_size: 20

        Label:
            id: trabajo_neto
            text: 'Respuesta 2'
            color: (0, 0, 0, 1)
            font_size: 20
