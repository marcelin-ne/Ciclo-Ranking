# main.kv
<MainApp>:
    orientation: 'vertical'
    LineDrawer:
        id: line_drawer
    MyForm:
        id: my_form
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: 'Modificar Línea'
            on_press: line_drawer.modify_line('my_line', [100, 100, 500, 300])
        Button:
            text: 'Animar Línea'
            on_press: line_drawer.animate_line('my_line', [100, 100, 300, 500])
